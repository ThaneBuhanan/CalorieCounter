<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.thanebuhanan.caloriecounter.ui.day.DayViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#231a00">

        <TextView
            android:id="@+id/day_so_far"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/current_day"
            android:textSize="34sp"
            android:textColor="@color/mainTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/protein_background"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/total_protein"
            app:layout_constraintEnd_toEndOf="@+id/protein"
            app:layout_constraintStart_toStartOf="@+id/total_protein"
            app:layout_constraintTop_toTopOf="@+id/total_protein"
            app:srcCompat="@drawable/color_background_green" />

        <TextView
            android:id="@+id/total_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.protein}"
            android:textSize="20sp"
            android:textColor="@color/lightGreen"
            app:layout_constraintBottom_toBottomOf="@+id/protein"
            app:layout_constraintEnd_toStartOf="@+id/protein"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/protein"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="500" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="@string/protein"
            android:textSize="20sp"
            android:textColor="@color/lightGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/total_protein"
            app:layout_constraintTop_toBottomOf="@+id/day_so_far" />

        <ImageView
            android:id="@+id/calorie_background"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/total_calories"
            app:layout_constraintEnd_toEndOf="@+id/calories"
            app:layout_constraintStart_toStartOf="@+id/total_calories"
            app:layout_constraintTop_toTopOf="@+id/total_calories"
            app:srcCompat="@drawable/color_background_green" />

        <TextView
            android:id="@+id/total_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.calories}"
            android:textSize="20sp"
            android:textColor="@color/lightGreen"
            app:layout_constraintBottom_toBottomOf="@+id/calories"
            app:layout_constraintEnd_toStartOf="@+id/calories"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/calories"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="50000" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/calories"
            android:textSize="20sp"
            android:textColor="@color/lightGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/total_calories"
            app:layout_constraintTop_toBottomOf="@id/protein" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:importantForAccessibility="no"
            app:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@null" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_of_foods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="#231a00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_calories" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>